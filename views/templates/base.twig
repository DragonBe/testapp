            <section class="row">
                <div class="col-sm-8">
                    {% block content %}{% endblock %}
                </div>
                <div class="col-sm-4">
                    <section class="account">
                        <h2>Account</h2>
                        {% block account %}
                            {% if account.authenticated %}
                                <a href="{{ app.url_generator.generate('profile') }}"><img src="{{ account.avatar_url }}" width="24" height="24" alt="{{ account.login }}">&nbsp;{{ account.name }}</a> |
                                <a href="{{ app.url_generator.generate('logout') }}">Logout</a>
                            {% else %}
                                <a href="{{ app.url_generator.generate('login') }}" class="github-oauth-btn btn">Sign in with GitHub</a>
                            {% endif %}
                        {% endblock %}
                    </section>

                    <section class="social">
                        <h2>Twitter feed</h2>
